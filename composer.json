{
	"name": "alsvanzelf/jsonapi",
	"type": "library",
	"description": "Human-friendly library to implement JSON:API without needing to know the specification.",
	"keywords": ["jsonapi", "json-api", "api", "json"],
	"homepage": "https://github.com/lode/jsonapi",
	"license": "MIT",
	"authors": [
		{
			"name": "Lode Claassen",
			"email": "lode@alsvanzelf.nl",
			"homepage": "https://www.lodeclaassen.nl/"
		}
	],
	"require": {
		"php": ">=5.6",
		"ext-json": "*"
	},
	"autoload": {
		"psr-4": {
			"alsvanzelf\\jsonapi\\": "src/",
			"alsvanzelf\\jsonapiTests\\": "tests/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^5.7|^6.5|^7.5|^8.5|^9.4",
		"psr/http-message": "^1.0"
	},
	"suggest": {
		"psr/http-message": "Allows constructing requests from Psr RequestInterface"
	}
}
